{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": false,
        "target": "es2017",
        "allowSyntheticDefaultImports": true,
        "noLib": false,
        "typeRoots": ["./node_modules/@types","./src/typings"],
    },
    "include": [
        "./src","./src/typings"
    ],
    "exclude": [
        "./node_modules"
    ]
}
